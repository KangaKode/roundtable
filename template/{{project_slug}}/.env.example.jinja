# {{ project_name }} Environment Variables
# Copy this to .env and fill in your values
# NEVER commit .env to git

{% if llm_provider == 'anthropic' -%}
# Anthropic (Claude)
ANTHROPIC_API_KEY=your-key-here
{% elif llm_provider == 'openai' -%}
# OpenAI
OPENAI_API_KEY=your-key-here
{% elif llm_provider == 'google' -%}
# Google (Gemini)
GOOGLE_API_KEY=your-key-here
{% elif llm_provider == 'multi' -%}
# LLM Providers (configure at least one)
ANTHROPIC_API_KEY=your-key-here
# OPENAI_API_KEY=your-key-here
# GOOGLE_API_KEY=your-key-here
{% endif -%}

{% if persistence == 'postgres' -%}
# Database
DATABASE_URL=postgresql://user:password@localhost:5432/{{ project_slug }}
{% elif persistence == 'sqlite' -%}
# Database (SQLite - default path)
# DATABASE_PATH=data/{{ project_slug }}.db
{% endif -%}

{% if include_api_gateway -%}
# API Gateway
# Set API_KEY to enable authentication. Leave empty to disable (dev mode).
# CRITICAL: Always set API_KEY in production.
# API_KEY=your-secret-api-key
API_HOST=0.0.0.0
API_PORT=8000

# CORS (comma-separated origins, default: localhost only)
# CORS_ORIGINS=https://myapp.com,https://admin.myapp.com

# Rate limiting (requests per minute per client IP)
RATE_LIMIT_PER_MINUTE=60

# Webhook signing secret (HMAC-SHA256). Set to verify webhook payloads.
# WEBHOOK_SECRET=your-webhook-secret

# Environment (set to 'production' to enforce security checks)
# ENV=development
{% endif -%}

# Logging
LOG_LEVEL=INFO
