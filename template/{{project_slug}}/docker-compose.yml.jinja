# {{ project_name }} - Docker Compose Configuration
# Generated by aiscaffold v3
#
# Usage:
#   docker-compose up              # Start all services
#   docker-compose up -d           # Start in background
#   docker-compose down            # Stop all services
#   docker-compose logs -f app     # Follow app logs
#   docker-compose run app make test  # Run tests in container

services:
  # ===========================================================================
  # Application
  # ===========================================================================
  app:
    build: .
    ports:
      - "8000:8000"
    env_file: .env
    environment:
      - LOG_LEVEL=${LOG_LEVEL:-INFO}
{% if persistence == 'postgres' %}
      - DATABASE_URL=postgresql://{{ project_slug }}:${DB_PASSWORD:-changeme}@db:5432/{{ project_slug }}
{% elif persistence == 'sqlite' %}
      - DATABASE_PATH=/app/data/{{ project_slug }}.db
{% endif %}
    volumes:
      - app-data:/app/data
      - app-artifacts:/app/.aiscaffold
{% if persistence == 'postgres' %}
    depends_on:
      db:
        condition: service_healthy
{% endif %}
    restart: unless-stopped

{% if persistence == 'postgres' %}
  # ===========================================================================
  # PostgreSQL Database
  # ===========================================================================
  db:
    image: postgres:16-alpine
    environment:
      POSTGRES_DB: {{ project_slug }}
      POSTGRES_USER: {{ project_slug }}
      POSTGRES_PASSWORD: ${DB_PASSWORD:-changeme}
    ports:
      - "5432:5432"
    volumes:
      - pgdata:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U {{ project_slug }}"]
      interval: 10s
      timeout: 5s
      retries: 5
    restart: unless-stopped
{% endif %}

# =============================================================================
# Volumes
# =============================================================================
volumes:
  app-data:
  app-artifacts:
{% if persistence == 'postgres' %}
  pgdata:
{% endif %}
